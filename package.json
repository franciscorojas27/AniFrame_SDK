{
  "name": "scraper",
  "version": "1.0.0",
  "description": "plugin to scrappe web pages",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch --env-file=.env ./src/index.ts",
    "test": "vitest",
    "start": "cross-env PLAYWRIGHT_BROWSERS_PATH=0 --env-file=.env ./dist/index.js",
    "build": "node ./build.js"
  },
  "keywords": [
    "scraper",
    "plugin",
    "web",
    "scrape",
    "playwright",
    "automation",
    "headless",
    "anime"
  ],
  "author": "Francisco Rojas",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "playwright": "^1.55.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/yargs": "^17.0.33",
    "@vercel/ncc": "^0.38.4",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}